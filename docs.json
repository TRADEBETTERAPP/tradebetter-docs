{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "linden",
  "name": "BETTER",
  "colors": {
    "primary": "#0026FF",
    "light": "#4C526F",
    "dark": "#000000"
  },
  "backgroundImage": "/images/bg-scanlines.svg",
  "modeToggle": {
    "default": "dark",
    "enabled": false
  },

  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Docs",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "index",
              "whitepaper",
              "mission",
              "quickstart",
              "roadmap",
              "glossary",
              "legal/risks"
            ]
          },
          {
            "group": "Product",
            "pages": [
              "product/overview",
              "product/how-it-works",
              "product/vaults",
              "product/terminal"
            ]
          },
          {
            "group": "Token",
            "pages": [
              "token/better-token",
              "token/tokenomics",
              "token/vbetter"
            ]
          },
          {
            "group": "Developers",
            "pages": [
              "api-reference/introduction"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "App",
          "href": "https://tradebetter.app",
          "icon": "rocket"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [],
    "primary": {
      "type": "button",
      "label": "Launch App",
      "href": "https://tradebetter.app"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/tradebetterapp",
      "telegram": "https://t.me/betterterminal"
    }
  }
}
